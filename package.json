{
  "name": "distant-outpost",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "bootstrap": "^4.0.0-beta.2",
    "jquery": "^3.2.1",
    "npm": "^5.7.1",
    "popper.js": "^1.12.6",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.0.17"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "lint": "eslint **/*.js*"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^4.18.2",
    "eslint-plugin-react": "^7.7.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "impliedStrict": true,
        "jsx": true
      },
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "amd": true,
      "browser": true,
      "es6": true,
      "jquery": true,
      "node": true
    },
    "extends": [
      "eslint:all",
      "plugin:react/all"
    ],
    "plugins": [
      "react"
    ],
    "rules": {
      "arrow-parens": ["warn", "as-needed"],
      "capitalized-comments": "off",
      "class-methods-use-this": ["warn", {"exceptMethods": ["render"]}],
      "id-length": "off",
      "indent": ["error", 2],
      "no-extra-parens": "off",
      "no-inline-comments": "off",
      "no-magic-numbers": "off",
      "no-ternary": "off",
      "padded-blocks": "off",
      "react/forbid-component-props": "warn",
      "react/jsx-indent": ["error", 2],
      "react/jsx-indent-props": ["error", 2],
      "react/jsx-max-depth": ["warn", {"max": 3}],
      "react/prop-types": "warn",
      "react/require-optimization": "warn"
    }
  },
  "settings": {
    "react": {
      "createClass": "createReactClass",
      "version": "16.0"
    }
  }
}
